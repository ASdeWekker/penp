extends layout

block title
    -var title = "Login";

block link
    -var selected = "SIGN IN";

block content
    div.row
        div.col-lg-offset-4.col-lg-4.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8.col-xs-12
            h2 You will be able to login here
            if error
                p.login-error #{error}
            form(role="form", method="post")
                input(type="hidden", name="_csrf", value=csrfToken)
                div.input-group.input-group-lg
                    input.form-control(type="text", placeholder="Email", name="email")
                br
                div.input-group.input-group-lg
                    input.form-control(type="password", placeholder="Password", name="password")
                br
                div.input-group.input-group-lg
                    button.btn.default-btn(type="submit") Sign in
                br
                a(href="/register") Register here
                span &nbsp;/&nbsp;
                a(href="/sukkol") Forgot password?
