extends layout

block title
    -var title = "Register";

block link
    -var selected = "LOGIN";

block content
    h2 You might be able to register here
    if error
        p.register-error #{error}
    form(role="form", method="post")
        input(type="hidden", name="_csrf", value=csrfToken)
        div.input-group.input-group-lg
            span.input-group-addon First Name:
            input.form-control(type="text", name="firstName", required=true)
        br
        div.input-group.input-group-lg
            span.input-group-addon Last Name:
            input.form-control(type="text", name="lastName", required=true)
        br
        div.input-group.input-group-lg
            span.input-group-addon Email:
            input.form-control(type="text", name="email", required=true)
        br
        div.input-group.input-group-lg
            span.input-group-addon Password:
            input.form-control(type="password", name="password", required=true)
        br
        button.btn.btn-default(type="submit") Register
