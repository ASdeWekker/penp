doctype html
html
    head
        title js-calendar
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(name="theme-color", content="tomato")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        link(rel="stylesheet", href="2-stylesheets/styles.css", type="text/css")
    body
        div.container
            section.main
                table#calendar.table
                    thead.table--thead
                        tr.table--thead--tr.month-year
                            th(colspan="7")#monthAndYear.table--thead--tr--th
                        tr.table--thead--tr.thead-days
                            th(colspan="1").table--thead--tr--th Zo
                            th(colspan="1").table--thead--tr--th Ma
                            th(colspan="1").table--thead--tr--th Di
                            th(colspan="1").table--thead--tr--th Wo
                            th(colspan="1").table--thead--tr--th Do
                            th(colspan="1").table--thead--tr--th Vr
                            th(colspan="1").table--thead--tr--th Za
                    tbody#calendar-body.table--tbody
                .arrows
                    div(onclick="previous()")#previous.previous.arrows--arrow <
                    div(onclick="next()")#next.next.arrows--arrow >
        //- .
        //- Comment for whitespace.
        script(src="3-js/calendar.js", type="text/javascript")
        <script>document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')</script>